#! /usr/bin/env bash

panic()
{
	echo "ERROR: $@"
	exit 1
}

uid=10000
out_file="/zero_0000"
#out_file="/tmp/zero_0000"
touch "$out_file" || panic "touch failed"
chmod a+w "$out_file" || panic "chmod failed"
sudo -u "#$uid" dd if=/dev/zero of="$out_file" bs=16M status=progress
ls -l "$out_file"
df "$out_file"
rm -f "$out_file" || panic "rm failed"
